        <%- include('includes/head.ejs') %>
        <link rel="stylesheet" href="adminProd.css">
    </head>
    <body>
        <%- include('includes/nav.ejs') %>
        <div>
            <table>
                <tbody>
                <tr>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Options</th>
                </tr>
                <% if (products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <tr>
                            <td><%= product.title %></td>
                            <td>
                                <img src="<%= product.imgUrl %>" alt="<%= product.title %>" width="100px" height="100px">
                            </td>
                            <td><%= product.price %></td>
                            <td><%= product.desc %></td>
                            <td>
                                <form action="/del-product" method="post" class="inline-opt">
                                    <input type="hidden" name="id" value="<%= product._id %>">
                                    <button type="submit" class="del-btn">delete</button>
                                </form>
                                <a href="/edit-product?id=<%= product._id %>">
                                    <button class="edt-btn">edit</button>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
                <% } else { %>
                    <tfoot>
                        <p>No product to display <a href="/add-product">add product</a></p>
                    </tfoot>
                <% } %>
            </table>
        </div>
    </body>
</html>